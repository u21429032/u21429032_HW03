@model IEnumerable<ismail_HomeworkAssignment3.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-3 gallery">
        <a href="~/Media/Images/@item.FileName" data-fancybox="gallery" data-caption="@item.FileName">
            <img src="~/Media/Images/@item.FileName" />
        </a>

        <p> @item.FileName</p>
        <button type="button" class="btn btn-success">
            @Html.ActionLink("Download", "Download", new { name = item.FileName }, new { @Style = "color: white;" })
        </button>
        <button type="button" class="btn btn-danger">
            @Html.ActionLink("Delete", "Delete", new { name = item.FileName }, new { @Style = "color: white;" })
        </button>
    </div>
    }
</div>

<script>
        $(document).ready(function () {
            $(".gallery a").fancybox();
        });
</script>